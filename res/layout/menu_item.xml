<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:id="@+id/RelativeLayout_Item"
	android:paddingTop="6.0dip" android:layout_width="fill_parent" android:saveEnabled="false"
	android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
	<ImageView android:id="@+id/item_image" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_centerHorizontal="true"
		android:contentDescription="@string/imagebutton"
		/>
	<TextView android:id="@+id/item_text" 
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_marginTop="5.0dip"
		android:layout_below="@id/item_image"
		android:layout_centerHorizontal="true" 
		style="@style/menuTextStyle" />
</RelativeLayout>